---
import type { Post, SelectProperty } from '../lib/interfaces'
import { getAuthorLink } from '../lib/blog-helpers'
// import '../styles/notion-color.css'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-tags">
  {post.Authors &&
    post.Authors.length > 0 &&
    post.Authors.map((author: SelectProperty) => (
      <a href={getAuthorLink(author.name)} class={`tag ${author.color}`}>
        {author.name}
      </a>
    ))}
</div>

<style>
  .post-tags {
    font-size: 0.9rem;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  .post-tags a {
    display: flex;
    align-items: center;
    flex-shrink: 1;
    min-width: 0;
    border-radius: 3px;
    padding: 2px 6px;
    line-height: 1.2;
    color: rgb(50, 48, 44);
    background: rgba(227, 226, 224, 0.5);
  }
</style>
